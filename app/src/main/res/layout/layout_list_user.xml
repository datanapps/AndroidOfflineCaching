<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="6dp"
    app:cardElevation="6dp">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:padding="8dp">

        <ImageView
            android:id="@+id/layout_list_user_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="@string/app_name"
            android:padding="1dp"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:id="@+id/layout_list_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/layout_list_user_icon"
            android:padding="1dp"
            android:text="sdsdsdsd"
            android:textColor="@color/colorBlack"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/layout_list_user_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_list_user_name"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/layout_list_user_icon"
            android:padding="1dp"
            android:text="sdsdsdsd"
            android:textColor="@color/colorBlack"
            android:textSize="15sp" />
    </RelativeLayout>


</android.support.v7.widget.CardView>